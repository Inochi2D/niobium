name "metal"
description "Metal backend for Niobium."

targetPath "out/"
targetName "niobium-mtl"
importPaths "../../source"

dependency "metal-d" version=">=0.5.1"
dependency "numem" version="~>1.3"
dependency "nulib" version="~>0.3"

configuration "metal" {
    platforms "osx" "ios" "tvos" "watchos" "visionos"
    targetType "staticLibrary"
}

configuration "none" {
    targetType "none"
}