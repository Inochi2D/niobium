subPackage "modules/metal"
subPackage "modules/vulkan"

targetPath "out/"

configuration "metal" {
    platforms "osx" "ios" "tvos" "watchos" "visionos"
    targetType "staticLibrary"

    dependency ":metal" version="*"
}

configuration "vulkan" {
    targetType "staticLibrary"
    
    dependency ":vulkan" version="*"
}